# Application
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=aequitas
DATABASE_PASSWORD=aequitas_dev_password
DATABASE_NAME=aequitas_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI (for LangChain)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (optional, alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=aequitas-uploads
AWS_REGION=us-east-1

# Tesseract OCR (path to tessdata - optional if using cloud OCR)
TESSDATA_PATH=/usr/share/tessdata

# Email (for user invitations)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@aequitas.app
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@aequitas.app

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
